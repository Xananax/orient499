@import "_nib"
@import "_css/variables"

body
	font-size 100%
	font-size baseFontSize
	font-size 1em
	font-family bodyTextFont

html,body
	padding 0
	margin 0

.anchor
	display block
	position absolute
	left 0
	top - (menuHeight * 2)

#Main
	margin 0 auto
	position static
	display block
	width 100%
	min-height 100%
	clearfix()

#Wrapper
	margin 0 auto
	position static
	display table
	width inherit
	-webkit-transform translateZ(0)
	-webkit-backface-visibility hidden
	max-width inherit
	margin-top (menuHeight * 2)
	clearfix()

#Menu
	width inherit
	max-width inherit
	margin 0 auto

#Footer
	position relative
	display block
	margin 0 auto
	width inherit
	max-width inherit
	height footerHeight

@import "_css/utils"
@import "_css/fontawesome"
@import "_css/images"
@import "_css/slider"
@import "_css/text"
@import "_css/dots"
@import "_css/navigation"
@import "_css/responsive"
@import "_css/themes"
@import "_css/mutnt"

body
	height 100%

.close
	@extend .fa
	@extend .fa-times
	position absolute
	top 0
	right 0
	text-decoration none
	display none

.card
	position relative
	&.active
		position fixed
		width 100%
		height 100%
		left 0
		top 0
		z-index 99
		.close
			display block