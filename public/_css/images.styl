.image, .image-inner
	width 100%
	height 100%
	background-repeat no-repeat
	background-size cover
	background-position 50% 50%

.image-loading
	width 100%
	height 100%
	display table
	text-align center
	position absolute
	top 0
	left 0

.image-loading-inner
	width 100%
	height 100%
	display table-cell
	vertical-align middle
	@extend .fa
	@extend .fa-{loadingSpinnerClass}
	@extend .fa-spin

.image-inner
	position absolute
	-webkit-backface-visibility hidden
	-webkit-transform translateZ(0)
	&.image-focus-center-center
		background-position 50% 50%
	&.image-focus-center-left
		background-position 0% 50%
	&.image-focus-center-right
		background-position 100% 50%
	&.image-focus-top-center
		background-position 50% 0%
	&.image-focus-top-left
		background-position 0% 0%
	&.image-focus-top-right
		background-position 100% 0%
	&.image-focus-bottom-center
		background-position 50% 100%
	&.image-focus-bottom-left
		background-position 0% 100%
	&.image-focus-bottom-right
		background-position 100% 100%


.image-caption
	box-sizing border-box
	position absolute
	bottom 0
	padding 1em 0 3em 0
	width 100%
	opacity 1
	transition all animationSpeedSlow
	text-align center

.image:hover .image-caption, .slider:hover .image-caption
	opacity 1