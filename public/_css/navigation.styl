.nav
	position absolute
	position fixed
	top 0
	margin 0 auto
	height (menuHeight * 2)
	overflow hidden
	a
		box-sizing border-box
		display block
		text-align center
		text-decoration none
		background-position 50% 50%
		background-repeat no-repeat
		height 100%
	.logo
		float left
		width 100%
		height menuHeight
		a
			display block
			width inherit
			height inherit
			span
				@extend .visuallyhidden
	.links,.social
		float right
	.links
		top menuHeight
		width 100%
	.social
		display none

.nav-section
	height menuHeight
	display table
	width 100%
	height menuHeight
.nav-inner
	display table-row
	width 100%
	a
		min-width menuHeight
		display table-cell
		vertical-align middle
		line-height menuHeight