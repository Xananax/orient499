.slide
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	text-align center
	box-sizing border-box
	&:nth-child(2)
		left 100%
	&:nth-child(3)
		left 200%
	&:nth-child(4)
		left 300%
	&:nth-child(5)
		left 400%

.slider-controls
	position absolute
	top 50%
	left 0
	right 0
	width 100%


.slider-control
	display none
	opacity 1
	box-sizing border-box
	text-align center
	text-decoration none
	position absolute
	top - (sliderControlHeight/2)
	transition all .5s
	left 0
	i
		@extend .fa
	&.slider-control-right
		right 0
		left auto
		i
			@extend .fa-{sliderArrowsClass}-right
	&:focus,&:active,&:hover
		background transparent

.position-last-page
	background red
	.slider-control-right
		cursor default

.position-first-page
	.slider-control-left
		cursor default

.slides
	position relative
	width 100%
	height 100%
	transition left animationSpeedMid
	-webkit-transform translateZ(0)

.slider
	text-align center