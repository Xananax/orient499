.dots
	position absolute
	bottom 0
	padding .5em
	display block
	width 100%
	text-align center
	font-size .7em

.dot,.dot:before,.dot:after
	width dotSize
	height dotSize
	box-sizing border-box
	border-radius (dotSize/2)

.dot:before,.dot:after
	content ''
	display block
	position absolute
	top 0
	left 0

.dot
	display inline-block
	position relative
	margin 0 .25em
	&:before
		background-color transparent
	&:after
		border dotBorderSize dotBorderColor solid
	&.active
		&:before
			background-color dotColor
	&:focus
		outline none
		&:before
			background-color rgba(255,255,255,.5)