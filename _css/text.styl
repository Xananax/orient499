cardTextMargins = 3em

.card-text
	> h1
		position absolute
		top (cardTextMargins/3)
		left cardTextMargins

.text
	width 100%
	height 100%
	position absolute
	text-align center
	box-sizing border-box
	
.text-cell
	position absolute
	width 100%
	height 100%
	display table
	box-sizing border-box
	padding (cardTextMargins * 2)
	p
		display table-cell
		vertical-align middle
		text-align left