.slide
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	text-align center
	box-sizing border-box
	&:nth-child(2)
		left 100%
	&:nth-child(3)
		left 200%
	&:nth-child(4)
		left 300%
	&:nth-child(5)
		left 400%

.slider-controls
	position absolute
	top 50%
	left 0
	right 0
	width 100%

.slider-title
	width 100%
	height 100%
	background clapBG
	color clapFG
	position absolute
	top 0
	left 0
	text-align center
	box-sizing border-box
	transition top animationSpeedMid ease-in-out 6s
	.slider-title-inner
		position absolute
		width 100%
		height 100%
		display table
		h1
			display table-cell
			vertical-align middle
			text-align center

.slider-control
	opacity 0
	box-sizing border-box
	height sliderControlHeight
	width sliderControlHeight
	color sliderControlFG
	text-align center
	text-decoration none
	position absolute
	top - (sliderControlHeight/2)
	transition all .5s
	left 0
	//border-radius (sliderControlHeight/2)
	i
		@extend .fa
		@extend .fa-{sliderArrowsClass}-left
		font-size sliderControlHeight
	&.slider-control-right
		right 0
		left auto
		i
			@extend .fa-{sliderArrowsClass}-right
	&:focus,&:active,&:hover
		outline none
		background sliderControlFocusBG

.slides
	position relative
	width 100%
	height 100%
	transition left animationSpeedMid

.slider
	text-align center
	&:hover
		.slider-control
			opacity 1
		.slider-title
			top 100%
			transition top animationSpeedFast ease-in-out