@import "_nib"
@import "_css/variables"

body
	font-size 100%
	font-size baseFontSize
	font-size 1em
	font-family bodyTextFont

h1,h2,h3,h4,h5
	font-weight 300
	font-family titlesTextFont
	text-transform titlesTextTransform

html,body
	padding 0
	margin 0

body
	background-color bodyBG
	font-size 1.5em

.anchor
	display block
	position absolute
	left 0
	top - (menuHeight * 2)

#Wrapper
	margin 0 auto
	width cardWidth
	position relative
	margin-top (menuHeight * 2)
	clearfix()

#Footer
	position relative
	display block
	float left
	width cardWidth
	margin 0 auto
	background black
	color #fdfdfd
	height footerHeight
	.mutnt
		position absolute
		top (footerHeight/4)
		right (footerHeight/4)
		.mutnt-logo-square
			display block
			width (footerHeight /2)
			height (footerHeight/2)
			background url('images/mutnt-logo-square.png') 50% 50% no-repeat
			background-size cover
			float right
		.mutnt-logo
			display block
			width 100%
			height 50px
			background url('images/mutnt-logo.png') 50% 50% no-repeat
			background-size contain
	.mutnt-text
		color #000

@import "_css/utils"
@import "_css/fontawesome"
@import "_css/images"
@import "_css/slider"
@import "_css/text"
@import "_css/dots"
@import "_css/navigation"
@import "_css/card"
@import "_css/responsive"


